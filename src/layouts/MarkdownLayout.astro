---
import Layout from "./Layout.astro";
import Breadcrumbs from "../components/Breadcrumbs.astro";
import { formatLocaleDate } from "../utils/date";

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title} description={frontmatter.description}>
  <Breadcrumbs />
  <h1 class="mt-6 text-5xl font-bold leading-tight text-stone-950 dark:text-stone-50">
    {frontmatter.title}
  </h1>
  <h2 class="mt-2 flex gap-2 text-sm tracking-wide text-gray-800 dark:text-stone-50">
    <span>{formatLocaleDate(frontmatter.date as Date)}</span> â€” <span>{frontmatter.section}</span>
  </h2>
  <div
    class="prose prose-stone mt-10 dark:prose-invert prose-h1:text-xl prose-h1:font-bold prose-p:text-justify prose-img:rounded-xl"
  >
    <slot />
  </div>
</Layout>
