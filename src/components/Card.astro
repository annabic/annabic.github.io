---
interface Props {
  title: string;
  description?: string;
  url?: string;
}

const { title, description, url } = Astro.props;
---

<div class="mb-5 max-w-sm rounded-lg border border-gray-200 bg-white shadow-md">
  <a href={url}>
    <img class="rounded-t-lg" src="https://source.unsplash.com/YXWoEn5uOvg" alt="" />
  </a>
  <div class="p-5">
    <a href={url}>
      <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">{title}</h5>
    </a>
    <p class="mb-3 font-normal text-gray-700">{description ?? ""}</p>
    <a
      class="inline-flex items-center rounded-lg bg-lime-700 px-3 py-2 text-center text-sm font-medium text-white hover:bg-lime-800 focus:ring-4 focus:ring-lime-200"
      href={url}
    >
      Read more
    </a>
  </div>
</div>
